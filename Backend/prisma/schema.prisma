generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  // Guarda el archivo dentro de la carpeta prisma para orden:
  url      = "file:./prisma/dev.db"
}

model Partida {
  id           Int              @id @default(autoincrement())
  codigo       String           @unique
  estado       String
  rondaActual  Int              @default(0)

  rondas       Ronda[]
  jugadores    Jugador[]
  decisiones   Decision[]
  resultados   ResultadoRonda[]

  createdAt    DateTime         @default(now())
}

model Jugador {
  id         Int       @id @default(autoincrement())
  nombre     String
  esBot      Boolean   @default(false)
  budget     Int       @default(0)

  partidaId  Int
  partida    Partida   @relation(fields: [partidaId], references: [id])

  decisiones Decision[]

  createdAt  DateTime  @default(now())
}

model Ronda {
  id         Int       @id @default(autoincrement())
  numero     Int

  partidaId  Int
  partida    Partida   @relation(fields: [partidaId], references: [id])

  decisiones Decision[]
  resultados ResultadoRonda[]

  createdAt  DateTime  @default(now())

  @@unique([partidaId, numero], name: "ronda_unica_por_partida")
}

model Decision {
  id         Int       @id @default(autoincrement())
  data       Json
  createdAt  DateTime  @default(now())

  jugadorId  Int
  jugador    Jugador   @relation(fields: [jugadorId], references: [id])

  partidaId  Int
  partida    Partida   @relation(fields: [partidaId], references: [id])

  rondaId    Int
  ronda      Ronda     @relation(fields: [rondaId], references: [id])
}

model ResultadoRonda {
  id         Int       @id @default(autoincrement())
  data       Json
  createdAt  DateTime  @default(now())

  partidaId  Int
  partida    Partida   @relation(fields: [partidaId], references: [id])

  rondaId    Int
  ronda      Ronda     @relation(fields: [rondaId], references: [id])

  @@unique([partidaId, rondaId], name: "resultado_unico_por_ronda")
}
